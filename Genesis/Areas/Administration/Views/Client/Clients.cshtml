<!-- Begin: Search form Portlet -->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-search font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">Search Parameters</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>
            <a href="javascript:;" class="reload">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="form-horizontal " role="form">
            <div class="form-body form-horizontal filterContainer">
                
                <div class="row">
                    <div class=" col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Client Code</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-sm formItem" placeholder="Code" name="clientCodeSearch" id="clientCodeSearch">
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Client Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-sm formItem" placeholder="Client Name" name="clientNameSearch" id="clientNameSearch">
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>

                <div class="row">
                    <div class=" col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Contact Num</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-sm formItem" placeholder="Contact Number" name="clientContactNumberSearch" id="clientContactNumberSearch">
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3">Contact Person</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-sm formItem" placeholder="Contact Person" name="clientContactPersonSearch" id="clientContactPersonSearch">
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                </div>

            </div>
            </div>
            <div class="form-actions" style="padding: 10px 10px 0px 0px !important;">
                <div class="row">
                    <div class="col-md-12" style="text-align: right;">
                        <input type="button" class="btn yellow formItem" id="btnSubmitFilter" data-bind="click: asyncOperation" value="SUBMIT" >
                        <button type="button" class="btn red" id="btnResetFilter">Reset</button>
                    </div>
                </div>
            </div>
        </div>
</div>
<!-- End: Search form Portlet-->

<!-- Begin: Client List Portlet-->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-users font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">System Clients Listing</span>
        </div>
        <div class="actions">
            <a id="btnAddNew" data-bind="click:addRow" class="btn btn-default btn-circle">
                <i class="fa fa-plus"></i>
                <span class="hidden-480">
                    New Client
                </span>
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="alert display-hide alert-danger problemAjax">
            <button class="close" data-close="alert"></button>
            <span>
                Ajax encountered a problem, Please contact system administrator.
            </span>
        </div>

        <div class="table-container" data-bind="loadingWhen: isLoading">
            <table class="table table-striped table-bordered table-hover table-advance" id="datatable_ajax">
                <thead>
                    <tr role="row" class="heading">
                        
                        <th width="20%">
                            Code
                        </th>
                        <th class="display-hide">
                            ID
                        </th>
                        <th width="25%">
                            Client Name
                        </th>
                        <th width="15%">
                            Contact Number
                        </th>
                        <th width="25%">
                            Contact Person
                        </th>
                        <th width="15%">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: clients">
                    <tr>
                        
                        @*<td class="highlight">
                            <div data-bind="css : status == 1 ? 'success' : 'danger' ">
                            </div>
                            <a href="javascript:;" data-bind="text:clientCode"></a>

                        </td>*@
                        <td data-bind="text:clientCode"></td>
                        <td class="display-hide" data-bind="text:clientId"></td>
                        <td data-bind="text:clientName"></td>
                        <td data-bind="text:clientContactNumber"></td>
                        <td data-bind="text:clientContactPerson"></td>
                        <td>
                            <a data-bind="click: $parent.viewClient" class="btn default btn-xs blue" style="margin-bottom: 2px !important;">
                                <i class="fa fa-folder-open-o "></i> View
                            </a>
                            <a data-bind="click: $parent.editRow" class="btn default btn-xs purple" style="margin-bottom: 2px !important;">
                                <i class="fa fa-edit"></i> Edit
                            </a>

                            <a data-bind="css : status == 1 ? 'red' : 'green', click: status == 1 ? $parent.deactivate : $parent.activate" class="btn default btn-xs display-hide" style="margin-bottom: 2px !important;">
                                <i data-bind="css : status == 1 ? 'fa fa-times' : 'fa fa-check' "></i>
                                <span data-bind="text: status == 1 ? 'Deactivate' : 'Activate' "></span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- End: User List Portlet-->

<div id="AddEdit" class="modal fade" tabindex="-1" data-width="570">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title" data-bind="text: client.clientId() == 0? 'Add New Client':'Edit Client Details'"></h4>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <form action="javascript:;" id="formAddEdit" class="form-horizontal">
                    <div class="form-body">
                        <div class="alert display-hide alert-danger problemAjaxAdd">
                            <button class="close" data-close="alert"></button>
                            <span>
                                Ajax encountered a problem, Please contact system administrator.
                            </span>
                        </div>
                        <div class="alert alert-danger display-hide problemForm">
                            <button class="close" data-close="alert"></button>
                            You have some form errors. Please check below.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button>
                            Your form validation is successful!
                        </div>
                        <input data-bind="value : client.clientId" type="text" name="clientId" id="clientId" class="form-control formItem display-hide">

                        <div class="form-group">
                            <label class="col-md-3 control-label">Client Code<span class="required" aria-required="true">*</span></label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                    @*<i class="fa fa-check tooltips" data-original-title="Supplier Code Available" data-container="body"></i>*@
                                    <input type="text" data-bind="value : client.clientCode" class="form-control" name="clientCode" id="clientCode">
                                </div>
                            </div>
                        </div>

                        @*<div class="form-group has-error">*@
                        <div class="form-group">
                            <label class="col-md-3 control-label">Client Name<span class="required" aria-required="true">*</span></label>
                            <div class="col-md-9">
                                <div class="input-icon right">
                                    @*<i class="fa fa-exclamation tooltips" data-original-title="Supplier Name Already Exists" data-container="body"></i>*@
                                    <input type="text" data-bind="value : client.clientName" class="form-control" name="clientName" id="clientName">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Client Address</label>
                            <div class="col-md-9">
                                <textarea class="form-control" data-bind="value : client.clientAddress" rows="3" name="clientAddress" id="clientAddress"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Contact Number</label>
                            <div class="col-md-9">
                                <input type="text" data-bind="value : client.clientContactNumber" class="form-control" name="clientContactNumber" id="clientContactNumber">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Contact Person</label>
                            <div class="col-md-9">
                                <input type="text" data-bind="value : client.clientContactPerson" class="form-control" name="clientContactPerson" id="clientContactPerson">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Status</label>
                            <div class="col-md-9">

                                <div class="checkbox-list">
                                    <label class="checkbox-inline">
                                        <input type="checkbox" id="status" name="status" data-bind="checked: client.status">Active
                                    </label>

                                </div>
                            </div>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn default" data-dismiss="modal">Close</button>
        <input data-bind="value: client.clientId() == 0? 'Add':'Save'" type="button" class="btn blue formItem" id="btnAddSubmit">
    </div>
</div>


