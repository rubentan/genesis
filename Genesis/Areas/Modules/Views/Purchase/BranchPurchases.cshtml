<!-- Begin: Search Parameters -->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-search font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">Search Parameters</span>
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>
            <a href="javascript:;" class="reload">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <div class="form-horizontal filterContainer" role="form">
            <div class="form-body filterContainer">
                <div class="form-group">
                    <label class="col-md-2 control-labels" style="padding-top:5px;width:12% !important;">Document Num</label>
                    <div class="col-md-4" style="margin-right:90px !important;">
                        <input type="text" class="form-control input-sm" placeholder="Document Number" name="documentNumber" id="documentNumber">
                    </div>
                    <label class="col-md-2 control-labels" style="padding-top:5px;width:12% !important;">Supplier Name</label>
                    <div class="col-md-4">
                        <input type="text" class="form-control input-sm" placeholder="Supplier Name" name="supplierName" id="supplierName">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-labels" style="padding-top:5px;width:12% !important;">Supplier Code</label>
                    <div class="col-md-4" style="margin-right:90px !important;">
                        <input type="text" class="form-control input-sm" placeholder="Supplier Code" name="supplierCode" id="supplierCode">
                    </div>
                    @*<label class="col-md-2 control-labels" style="padding-top:5px;width:12% !important;">Date Created</label>
                    <div class="col-md-4">
                        <div class="input-group date-picker input-daterange" data-date="10/11/2012" data-date-format="mm/dd/yyyy">
                            <input type="text" class="form-control input-sm" name="dateFrom">
                            <span class="input-group-addon input-sm">
                                to
                            </span>
                            <input type="text" class="form-control input-sm" name="dateTo">
                        </div>
                    </div>*@
                </div>

                
            </div>
            <div class="form-actions" style="padding: 10px 10px 0px 0px !important;">
                <div class="row">
                    <div class="col-md-12" style="text-align: right;">
                        <button type="button" class="btn yellow" id="btnSubmitFilter" data-bind="click: asyncOperation">Submit</button>
                        <button type="button" class="btn red" id="btnResetFilter" data-bind="click: ResetFilter">Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Begin: life time stats -->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-shopping-cart font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">Branch Purchases Listing</span>
        </div>
        <div class="actions">
            <a id="btnAddNew" data-bind="click:addRow" class="btn btn-default btn-circle">
                <i class="fa fa-plus"></i>
                <span class="hidden-480">
                    New Purchase
                </span>
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-container">
            <div class="alert display-hide alert-danger problemAjax">
                <button class="close" data-close="alert"></button>
                <span>
                    Ajax encountered a problem, Please contact system administrator.
                </span>
            </div>

            <div class="table-container" data-bind="loadingWhen: isLoading">
                <table class="table table-striped table-bordered table-hover table-advance" id="datatable_ajax">
                    <thead>
                        <tr role="row" class="heading">
                            <th width="10%">
                                Document #
                            </th>
                            <th width="30%">
                                Supplier Name
                            </th>
                            <th width="15%">
                                Supplier Code
                            </th>
                            <th width="20%">
                                Purchase Price
                            </th>
                            <th width="15%">
                                Date Created
                            </th>
                            <th width="10%">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: documents">
                        <tr>
                            <td data-bind="text:documentNumber"></td>
                            <td data-bind="text: supplierName"></td>
                            <td data-bind="text: supplierCode"></td>
                            <td data-bind="text: convertToCurrency(salesPrice)"></td>
                            <td width="10%" data-bind="text: convertDateTimeFromJson(dateCreated)"></td>
                            <td width="15%">
                                <a data-bind="click: $parent.editRow" class="btn default btn-xs purple" style="margin-bottom: 2px !important;">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- End: life time stats -->

<input type="hidden" id="hdnGetBranchPurchasesUrl" data-url="@Url.Action("GetAllPurchases", "Purchase", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnEditPurchaseOrderUrl" data-url="@Url.Action("EditBranchPurchaseOrder", "Purchase", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnAddPurchaseOrderUrl" data-url="@Url.Action("AddBranchPurchaseOrder", "Purchase", new { area = "Modules" }, null)" />


