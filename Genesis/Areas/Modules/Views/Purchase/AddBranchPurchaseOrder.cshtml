<!-- Begin: life time stats -->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-basket font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">
                New Order
            </span>

        </div>

            <div class="actions">
                <a href="javascript:;" data-bind="click:backToList" class="btn btn-default btn-circle">
                    <i class="fa fa-angle-left"></i>
                    <span class="hidden-480">
                        Back
                    </span>
                </a>
            </div>

        
        
    </div>
    <div class="portlet-body">

        <div class="row">
            <div class="col-md-12 col-sm-12">

                <div class="portlet box grey-cascade ">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Order Details
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse">
                            </a>

                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form action="javascript:;" class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Supplier</label>
                                    <div class="col-md-9">
                                        <input type="hidden" id="ddSupplier" class="form-control select2 input-sm">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Document #</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control input-sm" id="txtDocumentNumber"/>

                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="control-label col-md-3">Date</label>
                                    <div class="col-md-9">
                                        <input class="form-control input-sm" type="text" value="" id="txtTransactionDate"/>
                                    </div>
                                </div>

                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>

            </div>
                        
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="portlet grey-cascade box">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs"></i>Order Items
                        </div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse">
                            </a>

                        </div>
                    </div>
                    <div class="portlet-body form">

                        <div class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Product</label>
                                    <div class="col-md-9">
                                        <input type="hidden" id="ddProduct" class="form-control select2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-9">
                                        <div class="well">
                                            <div class="row">
                                                <div class="col-md-3 name align-reverse">
                                                    List Price:
                                                </div>
                                                <div class="col-md-6 value" data-bind="text: convertToCurrency(Product.unitPrice())">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3 name align-reverse">
                                                    Unit:
                                                </div>
                                                <div class="col-md-6 value" data-bind="text: Product.uom">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3 name align-reverse">
                                                    Beginning:
                                                </div>
                                                <div class="col-md-6 value" data-bind="text: Product.beginning">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3 name align-reverse">
                                                    Incoming:
                                                </div>
                                                <div class="col-md-6 value" data-bind="text: Product.incoming">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3 name align-reverse">
                                                    Outgoing:
                                                </div>
                                                <div class="col-md-6 value" data-bind="text: Product.outgoing">

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3 name align-reverse">
                                                    In Stock:
                                                </div>
                                                <div class="col-md-6 value" data-bind="text: Product.ending">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Quantity</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control input-sm" id="txtQuantity">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Unit Price</label>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control input-sm" id="txtUnitPrice">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Discount </label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control input-sm" placeholder="Discount A" id="txtDiscountA">
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control input-sm" placeholder="Discount B" id="txtDiscountB">
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control input-sm" placeholder="Discount C" id="txtDiscountC">
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button class="btn blue" data-bind="click:addProduct">Add Product</button>
                                        <button class="btn default" data-bind="click:clearProductAdd" aria-hidden="true">Clear</button>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Product
                                </th>

                                <th>
                                    Unit Price
                                </th>
                                <th>
                                    Quantity
                                </th>
                                <th>
                                    DC A
                                </th>
                                <th>
                                    DC B
                                </th>
                                <th>
                                    DC C
                                </th>
                                <th>
                                    Total
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: orderItems">
                            <tr>
                                <td data-bind="text: productName"></td>

                                <td data-bind="text: convertToCurrency(unitPrice)"></td>
                                <td data-bind="text: quantity"></td>
                                <td data-bind="text: discountA"></td>
                                <td data-bind="text: discountB"></td>
                                <td data-bind="text: discountC"></td>
                                <td data-bind="text: convertToCurrency(total)"></td>
                                <td>
                                    <a href="#" class="btn-link" data-bind="click:$parent.removeProduct">remove</a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-6">
                <div class="well">


                    <div class="row static-info align-reverse">
                        <div class="col-md-8 name">
                            Grand Total:
                        </div>
                        <div class="col-md-3 value" data-bind="text:convertToCurrency(grandTotal())">

                        </div>
                    </div>
                </div>
            </div>
        </div>
              
        <div class="row">

            <div class="col-md-12 col-sm-12" style="text-align:right !important;">
                <button type="button" class="btn green" data-bind="click: function () { addSalesInvoiceContinue() }">Add & Continue</button>
                <button type="button" class="btn yellow-crusta" data-bind="click: function () { addSalesInvoiceReturn() }">Add & Return</button>
                <button type="button" data-bind="click:backToList"  class="btn ">Cancel</button>
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="hdnAddPurchaseOrderUrl" data-url="@Url.Action("SavePurchaseTransaction", "Purchase", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnReturnUrl" data-url="@Url.Action("BranchPurchases", "Purchase", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnGetAllBranchProductsUrl" data-url="@Url.Action("GetAllBranchProducts", "Sales", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnGetProductUrl" data-url="@Url.Action("GetProduct", "Sales", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnGetSupplierUrl" data-url="@Url.Action("GetSupplierForDropDown", "Purchase", new { area = "Modules" }, null)" />
<input type="hidden" id="hdnCheckExistingDocument" data-url="@Url.Action("CheckExistingDocument", "Sales", new { area = "Modules" }, null)" />

<script src="@Url.Content("~/Areas/Modules/Scripts/PurchaseAdd.js")"></script>

