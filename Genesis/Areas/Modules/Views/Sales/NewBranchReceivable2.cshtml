<!-- Begin: life time stats -->
<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="icon-basket font-green-sharp"></i>
            <span class="caption-subject font-green-sharp bold uppercase">
                New Payment
            </span>

        </div>

        <div class="actions">
            <a href="javascript:;" class="btn btn-default btn-circle">
                <i class="fa fa-angle-left"></i>
                <span class="hidden-480">
                    Back
                </span>
            </a>
        </div>

    </div>
    <div class="portlet-body">

        <div class="row">
            <div class="col-md-4 col-sm-12">

                <div class="portlet box grey-cascade ">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Client Details
                        </div>
                        <div class="tools">
                            <a tabindex="-1" href="javascript:;" class="collapse">
                            </a>

                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form action="javascript:;" class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-4">Client</label>
                                    <div class="col-md-8">
                                        <input type="hidden" id="ddClient" class="form-control select2 input-sm">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">Payment</label>
                                <div class="col-md-8">
                                    <div class="radio-list ">
                                        <label class="radio-inline">
                                            <input class="typeOfPayment" disabled type="radio" name="isNewPayment" id="radioNewPayment" value="true"> New
                                        </label>
                                        <label class="radio-inline">
                                            <input class="typeOfPayment" disabled type="radio" name="isNewPayment" id="radioExistingPayment" value="false"> Existing
                                        </label>
                                    </div>


                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
                
                <div class="portlet box grey-cascade display-none" id="existingPaymentDiv">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Existing Payment Details
                        </div>
                        <div class="tools">
                            <a tabindex="-1"  href="javascript:;" class="collapse">
                            </a>

                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form action="javascript:;" class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-4">Ref #</label>
                                    <div class="col-md-8">
                                        <select class="form-control input-sm formItem" name="branch" id="ddPayments" data-bind="options:existingPayments,optionsText: function(item) {
                       return item.referenceNumber + ' (remaining: ' + item.remainingBalance + ')'
                   },optionsValue:'receivableId',optionsCaption: 'Select',event:{ change: paymentsChanged}"></select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-4">Remaining Cheque Amount</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" data-bind="value:remainingChequeAmount" id="txtRemainingChequeAmount" disabled />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4">Cheque Number</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" data-bind="value:existingChequeNumber" id="txtChequeNumberExisting" disabled />

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label col-md-4">Cheque Date</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" data-bind="value:existingChequeDate" id="txtChequeDateExisting" disabled />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4">Issuing Bank</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" data-bind="value:existingIssuingBank" id="txtBankExisting" disabled />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>

                <div class="portlet box grey-cascade display-none" id="newPaymentDiv">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>New Payment Details
                        </div>
                        <div class="tools">
                            <a tabindex="-1" href="javascript:;" class="collapse">
                            </a>

                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
                        <form action="javascript:;" class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-4">Ref #</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" id="txtRefNumber" data-bind="" />
                                    </div>
                                </div>


                                <div class="form-group ">
                                    <label class="control-label col-md-4">Cheque Amount</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm " id="txtChequeAmount" data-bind="" />

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label col-md-4">Cheque Number</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" id="txtChequeNumberNew" data-bind="" />

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label col-md-4">Cheque Date</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm datePicker" id="txtChequeDateNew" data-bind="" />

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label col-md-4">Issuing Bank</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" id="txtIssuingBankNew" data-bind="" />

                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- END FORM-->
                    </div>
                </div>
                
                <div class="portlet grey-cascade box">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs"></i>Add Sales Invoice
                        </div>
                        <div class="tools">
                            <a tabindex="-1" href="javascript:;" class="collapse">
                            </a>

                        </div>
                        @*<div class="actions">
                    <a href="#AddProduct" data-toggle="modal" class="btn btn-default btn-sm" data-bind="click: function () { getAllNotYetReceivables() }">
                        <i class="fa fa-plus"></i> Add
                    </a>

                </div>*@
                    </div>
                    <div class="portlet-body form">
                        <div class="form-horizontal form-bordered form-row-stripped">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Sales Invoice</label>
                                    <div class="col-md-8">
                                        <select class="form-control input-sm formItem" name="clientDocuments" id="ddClientDocuments" data-bind="options:clientDocuments,optionsText:  function(item) {
    var remaining = item.totalPrice - item.totalPayments;
    return item.documentNumber + ' (remaining: ' + remaining + ')'
                   },optionsValue:'documentId',optionsCaption: 'Select',event:{ change: documentChanged}"></select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label"></label>
                                    <div class="col-md-8">
                                        <div class="well" style="margin-bottom: 0 !important">
                                            <div class="row">
                                                <div class="col-md-5 name align-reverse">
                                                    Total Price:
                                                </div>
                                                <div class="col-md-5 value" data-bind="text:convertToCurrency(totalPrice())" id="divTotalPrice">
                                                    0.0000
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 name align-reverse">
                                                    Paid:
                                                </div>
                                                <div class="col-md-5 value" data-bind="text:convertToCurrency(totalPaid())" id="divPaid">
                                                    0.0000
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-5 name align-reverse">
                                                    Remaining  Balance:
                                                </div>
                                                <div class="col-md-5 value" data-bind="text:convertToCurrency(totalRemaining())" id="divRemainingBal">
                                                    0.0000
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-4">Amount to pay</label>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control input-sm" data-bind="value:amountToPay" id="txtAmountToPay" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button class="btn blue" style="width:120px;" data-bind="click:addDocument">Add Document</button>
                                        <button class="btn default" style="width:120px;" data-bind="click:clearDocumentAdd" aria-hidden="true">Clear</button>
                                        <button type="button" style="width:120px;" class="btn green" data-bind="click: function () { addSalesReceivable() }">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            
            <div class="col-md-8 col-sm-12">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered table-striped" id="dataTable_orderItem2">
                        <thead>
                            <tr>
                                <th>
                                    Document #
                                </th>

                                <th>
                                    Total Amount
                                </th>
                                <th>
                                    Remaining Balance
                                </th>
                                <th>
                                    Amount To Pay
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach : payDocuments">
                            <tr>
                                <td data-bind="text:documentNumber"> </td>
                                <td data-bind="text:convertToCurrency(totalAmount)"></td>
                                <td data-bind="text:convertToCurrency(remainingBalance)"></td>
                                <td data-bind="text:convertToCurrency(totalPayAmount)"></td>
                                <td>
                                    <button data-bind="click:$parent.removeSalesDocument" class="btn-link">remove</button>
                                </td>
                            </tr>


                        </tbody>
                    </table>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <div class="well">

                            <div class="row static-info align-reverse">
                                <div class="col-md-8 name">
                                    Total Payment Amount:
                                </div>
                                <div class="col-md-3 value" data-bind="text:convertToCurrency(PaymentAmount())">

                                </div>
                            </div>
                            <div class="row static-info align-reverse">
                                <div class="col-md-8 name">
                                    Total Document Paid:
                                </div>
                                <div class="col-md-3 value" data-bind="text:convertToCurrency(GrandTotal())">

                                </div>
                            </div>
                            <div class="row static-info align-reverse">
                                <div class="col-md-8 name">
                                    Excess Payment:
                                </div>
                                <div class="col-md-3 value" data-bind="text:convertToCurrency(ExcessPaymentAmount())">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-12 col-sm-12" style="text-align:right !important;">
                    @*<button type="button" class="btn yellow-crusta" data-bind="click: function () { addSalesReceivable() }">Add Receivable</button>
                    <button type="button" class="btn red">Cancel</button>*@
                </div>
            </div>


        </div>
  
    </div>
</div>

